<%- include('../header') %>
    <div class="container-fluid py-5 secondary-color-bg screen-height small-text">
        <div class="container my-5">
            <h1 class="tertiary-color text-center mb-5">ADD PROMO</h1>

            
            <div class="container text-center">
                <form action="/promos/create" method="POST">
                    <div class="form-group row mb-3">
                        <label for="name" class="col-sm-2 col-form-label">Name :</label>
                        <div class="col-sm-5">
                            <input id="name" name="name" type="text" class="form-control">
                        </div>
                        
                    </div>
                    <div class="form-group row mb-3">
                        <label for="discount" class="col-sm-2 col-form-label">Discount(%) :</label>
                        <div class="col-sm-5">
                            <input id="discount" name="discount" type="number" class="form-control" min="1" max="100">
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <button id="submit" type="submit" class="btn primary-color-bg text-light">Submit</input>
                    </div>
                </form>
            </div>


        </div>
    </div>
    <%- include('../footer') %>